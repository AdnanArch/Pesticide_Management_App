<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.SearchableComboBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" styleClass="left-form"
    stylesheets="@../stylesheets/style.css" xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.al_makkah_traders_app.controller.ProductController">
    <children>
        <Label text="Add New Product" textFill="WHITE">
            <font>
                <Font name="Berlin Sans FB Demi Bold" size="30.0" />
            </font>
        </Label>
        <VBox alignment="TOP_CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
            <children>
                <VBox alignment="CENTER" styleClass="panel-view"
                    stylesheets="@../stylesheets/style.css">
                    <children>
                        <GridPane hgap="30.0" vgap="15.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                    prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                    prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                                    prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <children>
                                <Label text="Product Code:">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <Label text="Product Name:" GridPane.rowIndex="1">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="productCodeTextField" styleClass="text-field"
                                    stylesheets="@../stylesheets/style.css" GridPane.columnIndex="1" />
                                <Label text="Category:" GridPane.rowIndex="2">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <Label text="Brand:" GridPane.rowIndex="3">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="productNameTextField" styleClass="text-field"
                                    stylesheets="@../stylesheets/style.css" GridPane.columnIndex="1"
                                    GridPane.rowIndex="1" />
                                <Label text="Company Name:" GridPane.columnIndex="2"
                                    GridPane.rowIndex="1">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <Label text="Price Per Unit:" GridPane.columnIndex="2">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <Label text="Address:" GridPane.columnIndex="2"
                                    GridPane.rowIndex="2">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <Label text="Contact:" GridPane.columnIndex="2"
                                    GridPane.rowIndex="3">
                                    <font>
                                        <Font size="15.0" />
                                    </font>
                                </Label>
                                <SearchableComboBox fx:id="categoryNameComboBox"
                                    promptText="Select Category" styleClass="search-combo-box"
                                    stylesheets="@../stylesheets/style.css" GridPane.columnIndex="1"
                                    GridPane.rowIndex="2">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Fertilizer" />
                                            <String fx:value="Pesticide" />
                                            <String fx:value="Seed" />
                                        </FXCollections>
                                    </items>
                                </SearchableComboBox>
                                <TextField fx:id="brandNameTextField" styleClass="text-field"
                                    stylesheets="@../stylesheets/style.css" GridPane.columnIndex="1"
                                    GridPane.rowIndex="3" />
                                <TextField fx:id="priceTextField" styleClass="text-field"
                                    stylesheets="@../stylesheets/style.css" GridPane.columnIndex="3" />
                                <TextField fx:id="companyNameTextField" styleClass="text-field"
                                    stylesheets="@../stylesheets/style.css" GridPane.columnIndex="3"
                                    GridPane.rowIndex="1" />
                                <TextField fx:id="addressTextField" styleClass="text-field"
                                    stylesheets="@../stylesheets/style.css" GridPane.columnIndex="3"
                                    GridPane.rowIndex="2" />
                                <TextField fx:id="contactTextField" styleClass="text-field"
                                    stylesheets="@../stylesheets/style.css" GridPane.columnIndex="3"
                                    GridPane.rowIndex="3" />
                            </children>
                        </GridPane>
                        <HBox alignment="TOP_RIGHT" spacing="20.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#addNewProduct"
                                    prefWidth="65.0" text="Add" />
                                <Button mnemonicParsing="false" onAction="#onUpdate" text="Update" />
                                <Button mnemonicParsing="false" onAction="#onDelete"
                                    prefWidth="65.0" text="Delete" />
                                <Button mnemonicParsing="false" onAction="#onImport" text="Import" />
                            </children>
                            <padding>
                                <Insets bottom="20.0" right="20.0" />
                            </padding>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </VBox>
                <Label alignment="CENTER" text="Products" textFill="WHITE">
                    <font>
                        <Font name="Berlin Sans FB Demi Bold" size="30.0" />
                    </font>
                </Label>
                <VBox styleClass="panel-view" stylesheets="@../stylesheets/style.css"
                    VBox.vgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <TextField fx:id="searchProductField" styleClass="text-field"
                                    stylesheets="@../stylesheets/style.css" />
                                <Button mnemonicParsing="false" onAction="#onSearch" text="Search" />
                                <Button mnemonicParsing="false" onAction="#onRefresh" text="Refresh" />
                            </children>
                            <VBox.margin>
                                <Insets bottom="20.0" left="20.0" top="20.0" />
                            </VBox.margin>
                        </HBox>
                        <VBox VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets bottom="20.0" left="20.0" right="20.0" />
                            </VBox.margin>
                            <children>
                                <TableView fx:id="productTableView"
                                    stylesheets="@../stylesheets/style.css" VBox.vgrow="ALWAYS">

                                    <columns>
                                        <TableColumn prefWidth="75.0" text="Code">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="productCode" />
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn prefWidth="75.0" text="Name">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="productName" />
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn prefWidth="75.0" text="Category">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="categoryName" />
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn prefWidth="75.0" text="Brand">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="brandName" />
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn prefWidth="75.0" text="Company">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="companyName" />
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn prefWidth="75.0" text="Price">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="price" />
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn prefWidth="75.0" text="Warehouse Quantity">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="warehouseQuantity" />
                                            </cellValueFactory>
                                        </TableColumn>
                                        <TableColumn prefWidth="75.0" text="Shop Quantity">
                                            <cellValueFactory>
                                                <PropertyValueFactory property="shopQuantity" />
                                            </cellValueFactory>
                                        </TableColumn>
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" left="30.0" right="30.0" />
            </VBox.margin>
        </VBox>
    </children>
</VBox>