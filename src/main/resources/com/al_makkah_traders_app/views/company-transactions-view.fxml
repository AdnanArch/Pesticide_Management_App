<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.controlsfx.control.SearchableComboBox?>

<VBox alignment="TOP_CENTER" spacing="20.0" styleClass="left-form" stylesheets="@../stylesheets/style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.al_makkah_traders_app.controller.CompanyTransactionController">
    <VBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets bottom="10.0" left="30.0" right="30.0" />
        </VBox.margin>
        <Label text="Account Transactions Report" textFill="WHITE">
            <font>
                <Font name="Berlin Sans FB Demi Bold" size="30.0" />
            </font>
        </Label>
        <VBox prefHeight="400.0" styleClass="panel-view" stylesheets="@../stylesheets/style.css" VBox.vgrow="ALWAYS">
            <HBox alignment="CENTER" spacing="20.0">
                <VBox.margin>
                    <Insets bottom="20.0" left="20.0" top="20.0" />
                </VBox.margin>
            <SearchableComboBox fx:id="accountNoComboBox" promptText="Select Account No" stylesheets="@../stylesheets/style.css" />
                <Button mnemonicParsing="false" onAction="#onSearch" text="Search" />
                <Button mnemonicParsing="false" onAction="#onRefresh" text="Refresh" />
            </HBox>
            <VBox VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets bottom="20.0" left="20.0" right="20.0" />
                </VBox.margin>
                <TableView fx:id="debitCreditTableView" stylesheets="@../stylesheets/style.css" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn prefWidth="75.0" text="Date">
                            <cellValueFactory>
                                <PropertyValueFactory property="date" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="75.0" text="Description">
                            <cellValueFactory>
                                <PropertyValueFactory property="description" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="75.0" text="Credit">
                            <cellValueFactory>
                                <PropertyValueFactory property="credit" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="75.0" text="Debit">
                            <cellValueFactory>
                                <PropertyValueFactory property="debit" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn prefWidth="75.0" text="Balance">
                            <cellValueFactory>
                                <PropertyValueFactory property="balance" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </VBox>
    </VBox>
</VBox>
